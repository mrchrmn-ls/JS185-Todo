extends layout 

block main 
  form(action="/lists" method="post")
    dl 
      dt 
        label(for="todoListTitle") Enter the title for your new list: 
      dd 
        input(type="text"
              id="todoListTitle"
              name="todoListTitle"
              placeholder="New list title"
              value=todoListTitle)

    fieldset.actions 
      input(type="submit" value="Save")
      a(href="/lists") Cancel